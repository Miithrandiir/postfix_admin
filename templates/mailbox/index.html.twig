{% extends 'base.html.twig' %}

{% block title %}Hello MailboxController!{% endblock %}

{% block javascripts %}
    {{ vite_asset('table_search') }}
    <script>
        window.onload = () => {
            let mailbox_table = document.querySelector("#mailbox_table");
            new Table(mailbox_table);
        };
    </script>

{% endblock %}

{% block body %}
    <div id="mailbox" class="box">
        <div class="box-header">
            <h2>My Mailboxes</h2>
            {% if is_granted('ROLE_MAILBOX_CREATE') %}
                <a href="{{ path('mailbox_create') }}" class="button button-success" id="create_mailbox"><span
                            class="material-icons">add</span> Add a mailbox</a>
            {% endif %}
        </div>
        <div class="box-body">
            <table class="table" id="mailbox_table">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Mail</th>
                    <th>Name</th>
                    <th>Firstname</th>
                    <th>Quota</th>
                    <th>Enable</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for domain in domains %}
                    {% for mailbox in domain.Mailboxes %}
                        <tr>
                            <td>{{ mailbox.id }}</td>
                            <td>
                                <span class="badge badge-warning">
                                    {{ mailbox.username }}@{{ domain.domain }}
                                </span>
                            </td>
                            <td>{{ mailbox.name|default('UNKNOW') }}</td>
                            <td>
                                {{ mailbox.firstname|default('UNKNOW') }}
                            </td>
                            <td>
                                <span class="badge badge-info">
                                    {{ mailbox.quota }}
                                </span>
                            </td>
                            <td>
                                {% if mailbox.isActive %}
                                    <span class="badge badge-success">
                                        <span class="material-icons">check</span>
                                    </span>
                                {% else %}
                                    <span class="badge badge-danger">
                                        <span class="material-icons">close</span>
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                {% if is_granted('ROLE_MAILBOX_DEACTIVATE') %}
                                    <a class="button button-warning deactivate"
                                       href="{{ path('app_mailbox_deactivate', {'id': mailbox.id}) }}"
                                       title="deactivate">
                                        <span class="material-icons">{{ mailbox.isActive ? 'power_off' : 'power' }}</span>
                                    </a>
                                {% endif %}

                                {% if is_granted('ROLE_MAILBOX_EDIT') %}
                                    <a class="button button-primary edit"
                                       href="{{ path('mailbox_edit', {'id': mailbox.id}) }}"
                                       title="edit">
                                        <span class="material-icons">edit</span>
                                    </a>
                                {% endif %}

                                {% if is_granted('ROLE_MAILBOX_DELETE') %}
                                    <a class="button button-danger delete"
                                       onclick="return confirm('Are you sure, you want to delete this mailbox ?')"
                                       href="{{ path('delete_mailbox', {'id': mailbox.id}) }}"
                                       title="edit">
                                        <span class="material-icons">delete</span>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
